<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="@dimen/dp_330"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_unselect_frame"
        android:padding="@dimen/dp_10" >

        <ImageView
            android:id="@+id/iv_rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/icon_rice" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_rice"
            android:layout_margin="@dimen/dp_15"
            android:text="优质大米"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/txt_25" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_title"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="23"
            android:textColor="@color/color_A2A2A2"
            android:textSize="@dimen/txt_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_price"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_price"
            android:text="元 /份"
            android:textColor="@color/color_A2A2A2"
            android:textSize="@dimen/txt_22" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_level1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_round_corner_red"
                android:text="1份"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_19" />

            <TextView
                android:id="@+id/tv_level2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_round_corner_white"
                android:text="2份"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/txt_19" />

            <TextView
                android:id="@+id/tv_level3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_round_corner_white"
                android:text="3份"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/txt_19" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>