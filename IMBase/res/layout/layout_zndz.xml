<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.kjstudy.test.view.CustomeImgView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/woman_front" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" >

            <ImageView
                android:id="@+id/iv_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/zndz_female" />

            <ImageView
                android:id="@+id/iv_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_sex_female"
                android:layout_below="@+id/iv_sex_female"
                android:background="@drawable/zndz_male" />

            <TextView
                android:id="@+id/tv_ctl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTop="@drawable/reverse"
                android:text="反面"
                android:textColor="#57B8D9" />
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>