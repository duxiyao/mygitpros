<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.kjstudy.plugin.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@drawable/personal_head_round"
        app:civ_border_color="@color/content_black_bg"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="@dimen/dp_236"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/civ"
        android:layout_alignTop="@+id/civ"
        android:layout_toRightOf="@+id/civ"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2" />

</RelativeLayout>