<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round_corner_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:text="设置年级"
        android:textColor="@color/color_8DB6F4"
        android:textSize="@dimen/text_size_one" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/color_D1D1D1" />

    <com.kjstudy.plugin.AverageView
        android:id="@+id/av_grade_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_cancle_press_up"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="取消"
        android:textColor="@color/color_3E4043"
        android:textSize="@dimen/text_size_two" />

</LinearLayout>