<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:padding="@dimen/dp_10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30" >

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_login_round_corner_frame"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_pwd" />

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@null"
                android:hint="@string/verify_code"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/text_size_three" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_account"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_register_btn_frame"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_two" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15" >

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/iv_qq" />
    </RelativeLayout>

</RelativeLayout>